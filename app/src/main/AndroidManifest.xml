<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gamecenter">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name2"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Game2048"
        tools:targetApi="31">
        <activity
            android:name="com.example.gamecenter.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gamecenter.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gamecenter.Settings"
            android:exported="false" />
        <activity
            android:name="com.example.gamecenter.ScoreboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gamecenter.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gamecenter.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gamecenter.GameCenterActivity"
            android:exported="true"
            android:label="@string/title_activity_game_center"
            android:theme="@style/Theme.Game2048" />
        <activity
            android:name="com.example.gamecenter.Activity2048"
            android:exported="true" />
        <activity
            android:name="com.example.gamecenter.SenkuActivity"
            android:exported="true" />
    </application>

</manifest>